<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#73000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mintegral_video_common_alertview_bg"
        android:padding="@dimen/mintegral_video_common_alertview_bg_padding">

        <TextView
            android:id="@+id/mintegral_video_common_alertview_titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认关闭？"
            android:textColor="@color/mintegral_video_common_alertview_title_textcolor"
            android:textSize="@dimen/mintegral_video_common_alertview_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mintegral_video_common_alertview_contentview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mintegral_video_common_alertview_titleview"
            android:layout_marginTop="@dimen/mintegral_video_common_alertview_content_margintop"
            android:maxWidth="@dimen/mintegral_video_common_alertview_contentview_maxwidth"
            android:minWidth="@dimen/mintegral_video_common_alertview_contentview_minwidth"
            android:text="关闭后您将不会获得任何奖励噢~ "
            android:textColor="@color/mintegral_video_common_alertview_content_textcolor"
            android:textSize="@dimen/mintegral_video_common_alertview_content_size" />

        <Button
            android:id="@+id/mintegral_video_common_alertview_confirm_button"
            android:layout_width="@dimen/mintegral_video_common_alertview_button_width"
            android:layout_height="@dimen/mintegral_video_common_alertview_button_height"
            android:layout_below="@+id/mintegral_video_common_alertview_contentview"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="@dimen/mintegral_video_common_alertview_button_margintop"
            android:background="@drawable/mintegral_video_common_alertview_confirm_bg"
            android:text="确认关闭"
            android:textColor="@color/mintegral_video_common_alertview_confirm_button_textcolor"
            android:textSize="@dimen/mintegral_video_common_alertview_button_textsize" />

        <Button
            android:id="@+id/mintegral_video_common_alertview_cancel_button"
            android:layout_width="@dimen/mintegral_video_common_alertview_button_width"
            android:layout_height="@dimen/mintegral_video_common_alertview_button_height"
            android:layout_alignRight="@+id/mintegral_video_common_alertview_contentview"
            android:layout_below="@+id/mintegral_video_common_alertview_contentview"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="@dimen/mintegral_video_common_alertview_button_margintop"
            android:background="@drawable/mintegral_video_common_alertview_cancel_bg"
            android:text="继续观看"
            android:textColor="@color/mintegral_video_common_alertview_cancel_button_textcolor"
            android:textSize="@dimen/mintegral_video_common_alertview_button_textsize" />

    </RelativeLayout>

</FrameLayout>